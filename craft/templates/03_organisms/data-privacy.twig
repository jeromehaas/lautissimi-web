{% set dataPrivacy = craft.entries.section('dataPrivacy').one() %}

<div class="data-privacy section">
    <div class="data-privacy__inner section__inner">
        <h1 class="heading  heading--h1   heading--white  data-privacy__heading">
					{{ dataPrivacy['dataPrivacyHeading'] is defined ? dataPrivacy.dataPrivacyHeading : '' }}
        </h1>
        <div class="data-privacy__container">

					{% for item in dataPrivacy.dataPrivacyContent %}
						<div class="data-privacy__item item">
							<h4 class="heading  heading--h4   heading--white  item__heading">
								{{ item.heading }}
							</h4>
							<p class="paragraph  paragraph--white   item__paragraph">
								{{ item.text }}
							</p>
						</div>
					{% endfor %}

        </div>
    </div>
</div>