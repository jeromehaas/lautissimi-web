<footer class="footer section">
	<div class="footer__inner section__inner">

		<div class="footer__text text">
			{{> @heading class="text__heading" type="h3" looklike="h1" content="Ihr Prokekt. Unsere Passion." type="h2" color="white" }}
			{{> @paragraph class="text__item" content="Lernen Sie uns persönlich kennen. Wir nehmen uns gerne Zeit für Ihre Projektidee." color="white" }}
		</div>

			{{> @contact-form class="footer__contact-form"}}

		<address class="footer__address address">
			<img class="address__logo" src="/media/graphics/logos/logo-lautissimi.svg" ></img>
			{{> @paragraph class="address__item" content="O&S Interior GmbH" color="white" }}
			{{> @paragraph class="address__item" content="St. Johannes Strasse 23" color="white" }}
			{{> @paragraph class="address__item" content="CH-6300 Zug" color="white" }}
			{{> @link class="address__item" content="info@lautissimi.ch" href="mailto:info@lautissimi.ch" color="white" }}
			<a class="address__item" href="https://www.hotelleriesuisse.ch/" target="_blank">
				<img src="/media/graphics/logos/logo-hotellerie-suisse.svg" alt="Hotellerie Suisse">
			</a>	
		</address>	

		<div class="footer__links">
			{{> @paragraph class="links__item" content="©2022 O&S Interior GmbH" color="white" }}
			{{> @link class="links__item" content="Impressum" href="#" color="white" }}
			{{> @link class="links__item" content="Datenschutz" href="#" color="white" }}
			{{> @link class="links__item" content="Englisch" href="#" color="white" }}
			<a class="links__item item">
				<i class="item__icon icon icon--linkedin"></i>
			</a>
		</div>

		{{> @heading class="footer__heading" content="Kontakt" type="h2" color="white" }}

	</div>
</footer>